<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image_list_toprated"
        android:layout_width="70dp"
        android:layout_height="0dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_image_list_toprated"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_list_toprated"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_semibold"
        android:gravity="bottom"
        android:maxEms="3"
        android:maxLines="2"
        android:paddingHorizontal="12dp"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_genre_list_toprated"
        app:layout_constraintLeft_toRightOf="@+id/cv_image_list_toprated"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        src:text="Judul Filem" />

    <TextView
        android:id="@+id/tv_genre_list_toprated"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/inter_reguler"
        android:paddingHorizontal="12dp"
        android:textColor="@color/black_light"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_title_list_toprated"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_list_toprated"
        src:text="Action, Fantasy, Comedy, Romance" />

</androidx.constraintlayout.widget.ConstraintLayout>