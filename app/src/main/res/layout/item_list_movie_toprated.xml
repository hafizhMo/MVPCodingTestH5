<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/iv_image_list_toprated"
        android:layout_width="100dp"
        android:layout_margin="12dp"
        android:layout_height="0dp"
        src:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_list_toprated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/rb_rating_list_toprated"
        app:layout_constraintLeft_toLeftOf="@+id/rb_rating_list_toprated"
        app:layout_constraintRight_toRightOf="parent"
        src:text="Judul Filem" />

    <RatingBar
        android:id="@+id/rb_rating_list_toprated"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_image_list_toprated"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_genre_list_toprated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@id/rb_rating_list_toprated"
        app:layout_constraintTop_toBottomOf="@id/rb_rating_list_toprated"
        src:text="Action, Fantasy, Comedy, Romance" />

</androidx.constraintlayout.widget.ConstraintLayout>