<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image_list_cast"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_image_list_cast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_list_cast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_reguler"
        android:maxEms="3"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/cv_image_list_cast"
        app:layout_constraintRight_toRightOf="@id/cv_image_list_cast"
        app:layout_constraintTop_toBottomOf="@id/cv_image_list_cast"
        src:text="Original Name" />

    <TextView
        android:id="@+id/tv_character_list_cast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/inter_light"
        android:maxEms="3"
        android:maxLines="1"
        android:textColor="@color/black_light"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/cv_image_list_cast"
        app:layout_constraintRight_toRightOf="@id/cv_image_list_cast"
        app:layout_constraintTop_toBottomOf="@id/tv_name_list_cast"
        src:text="Character Name" />

</androidx.constraintlayout.widget.ConstraintLayout>